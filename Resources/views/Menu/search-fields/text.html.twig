{% trans_default_domain 'HBMDatagridBundle' %}

{% embed '@HBMDatagrid/Menu/partials/base.html.twig' with { 'datagrid': datagrid, 'searchKey': searchKey, 'searchField': searchField, 'transDomain': transDomain } only %}
  {% block form_element %}
    {% import '@HBMDatagrid/macros.html.twig' as dg %}

    {% set placeholder = searchField['placeholder']|default('abc') %}

    {% set attributes = attributes(searchField['attr']|default([])).add({
      'type': 'text',
      'placeholder': dg.trans(placeholder, transDomain),
      'name': searchKey,
      'value': datagrid.menu.searchValue(searchKey)
    }).addClasses('form-control') %}

    <input {{ attributes|raw }}>
  {% endblock form_element %}
{% endembed %}
