{% import 'HBMDatagridBundle::macros.html.twig' as dgMacros %}

{% if cell.theadLinks|length > 0 %}
  {% for sortKey, theadLink in cell.theadLinks %}
    <a href="{{ dgMacros.dgPath(theadLink) }}" title="{{ 'Sortieren nach: '|trans }} {{ cell.getSortKeyLabel(sortKey)|trans }}">
      {{ cell.getSortKeyLabel(sortKey)|trans|raw }}
      {% if datagrid.isSorted(sortKey) %}
        {% if datagrid.getSortationDirection(sortKey) == 'asc' %}
          <span class="glyphicon glyphicon glyphicon-sort-by-attributes"></span>
        {% endif %}
        {% if datagrid.getSortationDirection(sortKey) == 'desc' %}
          <span class="glyphicon glyphicon glyphicon-sort-by-attributes-alt"></span>
        {% endif %}
      {% endif %}
    </a>
    {% if not loop.last %}
      {{ cell.getSortKeySep }}
    {% endif %}
  {% endfor %}
{% else %}
	{{ cell.label|trans|raw }}
{% endif %}
