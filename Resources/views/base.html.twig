{% trans_default_domain "HBMDatagridBundle" %}

{% set transDomain = datagrid.translationDomain %}

{% include datagrid.menu.template with { 'datagrid': datagrid, 'transDomain': transDomain } only %}


{% set classesTable = 'table table-hover table-bordered table-condensed datagrid-table' %}
{% if datagrid.bootstrap == 'v4' %}
  {% set classesTable = 'table table-hover table-bordered table-sm datagrid-table' %}
{% endif %}


{% if datagrid.results|length == 0 %}
  <p>{{ 'Keine Eintr√§ge gefunden.'|trans }}</p>
{% else %}
  <table class="{{ classesTable }}">
    {% include 'HBMDatagridBundle:Datagrid:table-head.html.twig' with { 'datagrid': datagrid, 'transDomain': transDomain } only %}

    {% include 'HBMDatagridBundle:Datagrid:table-body.html.twig' with { 'datagrid': datagrid, 'transDomain': transDomain } only %}
  </table>
{% endif %}

{% include datagrid.pagination.template with { 'datagrid': datagrid, 'pagination': datagrid.pagination, 'transDomain': transDomain } only %}
