{
  "name": "burdadirect/symfony-bundle-datagrid",
  "description": "HBM Datagrid Bundle - List, filter, sort and paginate (query builder) results.",
  "authors" : [{
    "name" : "Christian Puchinger",
    "email" : "christian.puchinger@burda.com"
  }],
  "license": "MIT",
  "type": "symfony-bundle",
  "autoload": {
    "psr-4": {
      "HBM\\DatagridBundle\\": "src/"
    }
  },
  "repositories" : [
    {
      "type": "vcs",
      "url": "git@github.com:burdadirect/symfony-bundle-twig-attributes.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:burdadirect/symfony-bundle-twig-extensions.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:burdadirect/codestyle.git"
    }
  ],
  "require": {
    "php": "^8.2.0",
    "ext-json": "*",
    "burdadirect/symfony-bundle-twig-attributes": "dev-sf_7",
    "burdadirect/symfony-bundle-twig-extensions": "dev-sf_7",
    "symfony/config": "^7.0",
    "symfony/form": "^7.0",
    "symfony/routing": "^7.0",
    "symfony/http-foundation": "^7.0",
    "symfony/http-kernel": "^7.0",
    "symfony/dependency-injection": "^7.0",
    "psr/log": "^1.0 || ^2 || ^3",
    "phpoffice/phpspreadsheet": "^1.2",
    "twig/twig": "^3.3"
  },
  "require-dev": {
    "burdadirect/codestyle": "dev-main",
    "roave/security-advisories": "dev-latest",
    "doctrine/orm": "^2.7",
    "doctrine/mongodb-odm-bundle": "^5.0"

  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "phpstan/extension-installer": true
    }
  }
}
