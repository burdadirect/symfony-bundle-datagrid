{% trans_default_domain datagrid.transDomainFixed %}

{% import '@HBMDatagrid/macros.html.twig' as dg %}

<thead {{ datagrid.parseTableHeadAttr()|raw }}>
  <tr>
    {% for column, cell in datagrid.cells %}
      {% if (cell.isVisibleNormal and not datagrid.extended) or (cell.isVisibleExtended and datagrid.extended) %}
        <th {{ cell.attr('th')|raw }}>
          {% include '@HBMDatagrid/Datagrid/table-head-th.html.twig' with { 'datagrid': datagrid, 'cell': cell, 'column': column } only %}
        </th>
      {% endif %}
    {% endfor %}
  </tr>
</thead>

