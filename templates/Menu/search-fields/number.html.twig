{% trans_default_domain datagrid.transDomainFixed %}

{% embed '@HBMDatagrid/Menu/search-fields/partials/base.html.twig' with { 'datagrid': datagrid, 'searchKey': searchKey, 'searchField': searchField } only %}
  {% block form_element %}
    {% import '@HBMDatagrid/macros.html.twig' as dg %}

    {% set placeholder = searchField['placeholder']|default('123') %}

    {% set attributes = attributes(searchField['attr']|default([])).add({
      'type': 'text',
      'placeholder': dg.trans(placeholder, datagrid.transDomainVariable),
      'name': searchKey,
      'value': datagrid.menu.searchValue(searchKey)
    }).addClasses('form-control') %}

    <input {{ attributes|raw }}>
  {% endblock form_element %}
{% endembed %}
