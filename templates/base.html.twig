{% if dgo.results|length == 0 %}
  <p>{{ dgm.trans('Keine Eintr√§ge gefunden.', dgo.tdFix) }}</p>
{% else %}
  <div class="datagrid-table-wrapper">
    <table {{ dgo.parseTableAttr()|raw }}>
